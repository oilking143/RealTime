<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="5dp"
    android:background="#FFFFFF"

    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/playicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/play_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginStart="13dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="官方動態"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#595959"
        app:layout_constraintStart_toEndOf="@id/playicon"
        app:layout_constraintTop_toTopOf="@+id/playicon"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3天前"
        android:textColor="#81595959"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/forest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/memo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="測試文字測試文字測試文字測試文字"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/memo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="測試文字測試文字測試文字測試文字"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/memo1"
        app:layout_constraintTop_toBottomOf="@+id/memo1" />


    <TextView
        android:id="@+id/conttinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="...觀看更多"
        android:textColor="#81595959"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/memo2"
        app:layout_constraintTop_toBottomOf="@+id/memo2" />

    <TextView
        android:id="@+id/watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="98個讚"
        android:textColor="#81595959"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/conttinue"
        app:layout_constraintTop_toBottomOf="@+id/conttinue" />

    <TextView
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5個留言"
        android:textColor="#81595959"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/watch"
        app:layout_constraintTop_toBottomOf="@+id/conttinue" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#83555353"
        app:layout_constraintStart_toStartOf="@+id/watch"
        app:layout_constraintTop_toBottomOf="@+id/replay"
        android:orientation="horizontal" />
    <ImageView
        android:id="@+id/icon_like"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_like"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/icon_message"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_message"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/icon_like"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/icon_share"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_share"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/icon_message"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>