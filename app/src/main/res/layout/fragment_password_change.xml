<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textColor="#707070"
        android:textSize="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/title_text"
        app:layout_constraintBottom_toBottomOf="@+id/title_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="更改密碼"
        android:textColor="#3c3c3c"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_icon" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_arror"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的舊密碼"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/password_old"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="50dp"/>

    <EditText
        android:id="@+id/password_old"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edoittext_frame"
        android:hint="密碼"
        android:inputType="textPassword"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:paddingStart="20dp"
        android:textColor="#3c3c3c"
        android:textColorHint="#8E8E8E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <ImageView
        android:id="@+id/code_icon_old"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/eye_invisible"
        app:layout_constraintTop_toTopOf="@+id/password_old"
        app:layout_constraintBottom_toBottomOf="@+id/password_old"
        app:layout_constraintEnd_toEndOf="@+id/password_old"
        android:layout_marginEnd="25dp"/>


    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的新密碼"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/password_new"
        app:layout_constraintStart_toStartOf="@+id/password_new" />




    <EditText
        android:id="@+id/password_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edoittext_frame"
        android:hint="密碼"
        android:inputType="textPassword"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="50dp"
        android:paddingStart="20dp"
        android:textColor="#3c3c3c"
        android:textColorHint="#8E8E8E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <ImageView
        android:id="@+id/code_icon_new"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/eye_invisible"
        app:layout_constraintTop_toTopOf="@+id/password_new"
        app:layout_constraintBottom_toBottomOf="@+id/password_new"
        app:layout_constraintEnd_toEndOf="@+id/password_new"
        android:layout_marginEnd="25dp"/>


    <Button
        android:id="@+id/change_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/login_getconfirm__btn_frame"
        android:text="更改密碼"
        android:textColor="#FF756F"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/password_new"
        app:layout_constraintStart_toStartOf="@+id/password_new"
        app:layout_constraintTop_toBottomOf="@+id/password_new" />

    <LinearLayout
        android:id="@+id/verify_letter_toast"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/get_confirm_letter_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/verify_letter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail_toast_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/verify_letter_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_fail"
            android:textSize="14sp"
            android:textColor="#3c3c3c"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>