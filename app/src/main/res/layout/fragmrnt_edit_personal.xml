<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textColor="#707070"
        android:textSize="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/title_text"
        app:layout_constraintBottom_toBottomOf="@+id/title_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="編輯個人檔案"
        android:textColor="#3c3c3c"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_icon" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_arror"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="更改暱稱"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/email_enter_box"
        app:layout_constraintStart_toStartOf="@+id/email_enter_box" />

    <EditText
        android:id="@+id/email_enter_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/personal_edittext_frame"
        android:hint="更改暱稱"
        android:paddingLeft="20dp"
        android:textColorHint="#C1C1C1"
        android:textColor="#3C3C3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_text" />

    <TextView
        android:id="@+id/next_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="下次開播時間"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/email_enter_box"
        app:layout_constraintStart_toStartOf="@+id/email_enter_box" />

    <Spinner
        android:id="@+id/next_time_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/personal_edittext_frame"
        android:paddingLeft="20dp"
        android:textColor="#3C3C3C"
        app:layout_constraintEnd_toEndOf="@+id/next_time"
        app:layout_constraintStart_toStartOf="@+id/next_time"
        app:layout_constraintTop_toBottomOf="@+id/next_time" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="簡介"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/introduce_enter_box"
        app:layout_constraintStart_toStartOf="@+id/introduce_enter_box" />

    <EditText
        android:id="@+id/introduce_enter_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/personal_edittext_frame"
        android:hint="簡介"
        android:paddingLeft="20dp"
        android:textColorHint="#C1C1C1"
        android:textColor="#3C3C3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_time_spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改 Email"
        android:textColor="#3C3C3C"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/new_password"
        app:layout_constraintStart_toStartOf="@+id/new_password" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/personal_edittext_frame"
        android:hint="請輸入Email 取得認證信"
        android:paddingLeft="20dp"
        android:textColor="#3C3C3C"
        android:textColorHint="#C1C1C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduce_enter_box" />


    <LinearLayout
        android:id="@+id/get_verify"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_getconfirm__btn_frame"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/new_password"
        app:layout_constraintStart_toStartOf="@+id/new_password"
        app:layout_constraintTop_toBottomOf="@+id/new_password"
        app:layout_constraintVertical_bias="0">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取得認證信"
            android:textColor="#FF756F"
            android:textSize="24sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/verify_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/personal_edittext_frame"
        android:hint="請輸入信箱認證碼"
        android:paddingLeft="20dp"
        android:textColor="#3C3C3C"
        android:textColorHint="#C1C1C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_verify" />

</androidx.constraintlayout.widget.ConstraintLayout>